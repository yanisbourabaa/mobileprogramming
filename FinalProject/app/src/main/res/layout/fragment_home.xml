<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:orientation="vertical"
    tools:context="com.example.yanisbourabaa.finalproject.ui.home.HomeFragment">
    <RelativeLayout
        android:id="@+id/frag_home_rl_goodthing1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_weight="1"
        android:background="@color/colorAccent">
        <TextView
            android:id="@+id/frag_home_tv_goodthing1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:text="Good Thing 1"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/frag_home_rl_goodthing2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:id="@+id/frag_home_tv_goodthing2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:text="Good Thing 2"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/frag_home_rl_goodthing3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_weight="1"
        android:background="@color/colorPurple">
        <TextView
            android:id="@+id/frag_home_tv_goodthing3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:text="Good Thing 3"/>
    </RelativeLayout>
</LinearLayout>
